<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header bg-soft-success text-dark fs-3 text-center">
                Kullanıcı Listesi
            </div>
            <div class="card-body">
                <table id="tblUsers" class="table table-bordered table-striped table-hover">

                </table>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#tblUsers").DataTable({
                ajax:'/User/GetAll',
                columns:[
                    {data:'id', title:'Id'},
                    {data:'userName', title:'Kullanıcı Adı'},
                    {data:'fullName', title:'Ad Soyad'}
                ]
            });
        });
    </script>
}